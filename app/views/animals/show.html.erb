<h1><%= @animal.name %></h1>

<% if @animal.sightings.any? %>
<h4>Here are the sightings for
    <%= @animal.name %>
</h4>
<ul>
    <% @animal.sightings.each do |sighting| %>
    <li>
        <%= sighting.longitude %>
        degrees</li>
    <li><%= sighting.latitude %>
        degrees
        <%= link_to "Edit", edit_animal_sighting_path(@animal, sighting) %>
        |
        <%= link_to "Delete", animal_sighting_path(@animal, sighting),
                      data: {confirm: "Are you sure?", method: "delete"} %></li>
    <% end %>
</ul>
<% else %>
<p>
    There are no sightings yet for this animal.
</p>
<% end %>
<p><%= link_to "Edit", edit_animal_path(@animal) %></p>
<p><%= link_to "Delete Animal", animal_path(@animal), data: {confirm: "You sure?", method: "delete"}%></p>
<p><%= link_to "New Animal Sighting", new_animal_sighting_path(@animal) %></p>
<p><%= link_to "Return to Animals List", animals_path %></p>
